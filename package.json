{
  "name": "server",
  "repository": "git@github.com:odisplay/server.git",
  "author": "Cl√©ment DOUIN <clement.douin@posteo.net>",
  "license": "BSD3",
  "devDependencies": {
    "prettier": "^1.19.1",
    "prettier-stylelint": "^0.4.2",
    "psc-package": "^3.0.1",
    "purescript": "^0.13.5",
    "sass": "^1.23.7",
    "stylelint": "^12.0.0",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-order": "^3.1.1",
    "stylelint-prettier": "^1.1.1",
    "yarn-run-all": "^3.1.1"
  },
  "scripts": {
    "start": "find src -name '*.hs' | entr -s \"pkill server; stack run &\"",
    "stack:run": "command -v entr 2>&- >&2 && yarn start || stack run",
    "sass:run": "sass ./src/index.scss:static/styles.css --watch",
    "sass:build": "sass ./src/index.scss ./static/styles.css --style compressed --no-source-map",
    "predeploy": "yarn sass:build",
    "script:watch:nav": "pulp -w --psc-package browserify -m Nav.Main -t ./static/nav.js -O",
    "style:build:nav": "sass ./src/Shared/Nav/styles.scss ./static/nav.css",
    "style:build:aside": "sass ./src/Shared/Aside/styles.scss ./static/aside.css",
    "style:build:main": "sass ./src/Shared/Main/styles.scss ./static/main.css",
    "style:build:home": "sass ./src/Home/styles.scss ./static/home.css",
    "style:build": "run-p -s style:build:*",
    "deploy": "git push heroku master"
  }
}
