{
  "name": "server",
  "repository": "git@github.com:odisplay/server.git",
  "author": "Cl√©ment DOUIN <clement.douin@posteo.net>",
  "license": "BSD3",
  "devDependencies": {
    "prettier": "^1.19.1",
    "prettier-stylelint": "^0.4.2",
    "pulp": "^13.0.0",
    "sass": "^1.23.7",
    "stylelint": "^12.0.0",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-order": "^3.1.1",
    "stylelint-prettier": "^1.1.1",
    "yarn-run-all": "^3.1.1"
  },
  "scripts": {
    "start": "run-p -y scotty:watch style:watch script:watch",
    "scotty:watch": "find src -name '*.hs' | entr -s \"pkill server; stack run &\"",
    "style:watch:nav": "sass ./src/Shared/Nav/styles.scss:static/nav.css --watch",
    "style:watch:aside": "sass ./src/Shared/Aside/styles.scss:static/aside.css --watch",
    "style:watch:main": "sass ./src/Shared/Main/styles.scss:static/main.css --watch",
    "style:watch:home": "sass ./src/Home/styles.scss:static/home.css --watch",
    "style:build:nav": "sass -s compressed --no-source-map ./src/Shared/Nav/styles.scss:static/nav.css",
    "style:build:aside": "sass -s compressed --no-source-map ./src/Shared/Aside/styles.scss:static/aside.css",
    "style:build:main": "sass -s compressed --no-source-map ./src/Shared/Main/styles.scss:static/main.css",
    "style:build:home": "sass -s compressed --no-source-map ./src/Home/styles.scss:static/home.css",
    "script:watch:nav": "pulp -w --psc-package browserify -m Nav.Main -t ./static/nav.js -O",
    "script:watch:aside": "pulp -w --psc-package browserify -m Aside.Main -t ./static/aside.js -O",
    "script:watch:home": "pulp -w --psc-package browserify -m Home.Main -t ./static/home.js -O",
    "script:build:nav": "pulp --psc-package browserify -m Nav.Main -t ./static/nav.js -O",
    "script:build:aside": "pulp --psc-package browserify -m Aside.Main -t ./static/aside.js -O",
    "script:build:home": "pulp --psc-package browserify -m Home.Main -t ./static/home.js -O",
    "style:watch": "run-p -y style:watch:*",
    "style:build": "run-p -y style:build:*",
    "script:watch": "run-p -y script:watch:*",
    "script:build": "run-p -y script:build:*",
    "build": "run-p -y script:build style:build",
    "prepackage": "yarn build",
    "package": "tar cvzf server.tar.gz static -C $(dirname $(find .stack-work/install -name 'server')) server",
    "predeploy": "yarn package",
    "deploy": "heroku container:push web",
    "postdeploy": "heroku container:release web"
  }
}
