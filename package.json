  "license": "BSD3",
  "devDependencies": {
    "prettier": "^1.19.1",
    "prettier-stylelint": "^0.4.2",
    "sass": "^1.23.7",
    "stylelint": "^12.0.0",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-order": "^3.1.1",
    "stylelint-prettier": "^1.1.1"
  },
  "scripts": {
    "start": "ls src/**/*.hs | entr -s \"pkill server; stack run &\"",
    "stack:run": "command -v entr 2>&- >&2 && yarn start || stack run",
    "sass:run": "sass ./src/index.scss:static/styles.css --watch",
    "sass:build": "sass ./src/index.scss ./static/styles.min.css --style compressed --no-source-map",
    "predeploy": "yarn sass:build",
    "deploy": "git push heroku master"
  }
}
